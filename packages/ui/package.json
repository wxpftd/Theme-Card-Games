{
  "name": "@theme-card-games/ui",
  "version": "1.0.0",
  "description": "UI components for themed card games (React Native / Expo)",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external react-native",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --external react-native --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "card-game",
    "ui",
    "react-native",
    "expo"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@theme-card-games/core": "workspace:*"
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": ">=1.0.0",
    "expo-haptics": ">=12.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.72.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=3.0.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.17",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
