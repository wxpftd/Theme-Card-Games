{
  "name": "@theme-card-games/asset-pipeline",
  "version": "0.1.0",
  "description": "卡牌素材制作流水线工具",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "asset-pipeline": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
