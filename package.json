{
  "name": "theme-card-games",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A multi-theme card game framework for iOS",
  "workspaces": [
    "packages/*",
    "packages/themes/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "precommit": "pnpm lint && pnpm format:check && pnpm typecheck",
    "precommit:full": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test",
    "ci:local": "pnpm format && pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "app:bigtech": "cd apps/bigtech-worker && pnpm start",
    "app:bigtech:ios": "cd apps/bigtech-worker && pnpm ios",
    "app:bigtech:ios:clean": "cd apps/bigtech-worker && pnpm ios:clean",
    "app:startup": "cd apps/startup && pnpm start",
    "app:travel": "cd apps/travel && pnpm start",
    "app:parenting": "cd apps/parenting && pnpm start",
    "asset:init": "pnpm --filter @theme-card-games/asset-pipeline exec asset-pipeline init",
    "asset:extract": "pnpm --filter @theme-card-games/asset-pipeline exec asset-pipeline extract",
    "asset:generate": "pnpm --filter @theme-card-games/asset-pipeline exec asset-pipeline generate",
    "asset:batch": "pnpm --filter @theme-card-games/asset-pipeline exec asset-pipeline batch",
    "asset:process": "pnpm --filter @theme-card-games/asset-pipeline exec asset-pipeline process",
    "asset:status": "pnpm --filter @theme-card-games/asset-pipeline exec asset-pipeline status",
    "e2e:setup": "bash scripts/e2e-setup.sh",
    "e2e:maestro": "maestro test .maestro/flows/",
    "e2e:maestro:smoke": "maestro test .maestro/flows/ --include-tags=smoke",
    "e2e:maestro:p0": "maestro test .maestro/flows/ --include-tags=p0",
    "e2e:maestro:studio": "maestro studio",
    "e2e:detox:build": "pnpm --filter @theme-card-games/app-bigtech-worker e2e:build",
    "e2e:detox:test": "pnpm --filter @theme-card-games/app-bigtech-worker e2e:test",
    "e2e:detox": "pnpm e2e:detox:build && pnpm e2e:detox:test",
    "e2e": "pnpm e2e:detox"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "neverBuiltDependencies": [
      "react-native-screens"
    ],
    "overrides": {
      "@types/react": "~19.1.17"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
