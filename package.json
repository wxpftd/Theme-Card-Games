{
  "name": "theme-card-games",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A multi-theme card game framework for iOS",
  "workspaces": [
    "packages/*",
    "packages/themes/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "precommit": "pnpm lint && pnpm format:check && pnpm typecheck",
    "precommit:full": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test",
    "app:bigtech": "cd apps/bigtech-worker && pnpm start",
    "app:startup": "cd apps/startup && pnpm start",
    "app:travel": "cd apps/travel && pnpm start",
    "app:parenting": "cd apps/parenting && pnpm start"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
